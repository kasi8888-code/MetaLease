# MetaLease Environment Configuration

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Private key for contract deployment (DO NOT COMMIT TO GIT!)
PRIVATE_KEY=your_wallet_private_key_here

# RPC URLs (get from Alchemy, Infura, or use public ones)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# Blockchain explorer API keys for contract verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# =============================================================================
# IPFS CONFIGURATION (for NFT metadata storage)
# =============================================================================

PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_PROJECT_ID=your_walletconnect_project_id

# Contract addresses (will be filled after deployment)
NEXT_PUBLIC_RENTABLE_NFT_ADDRESS=
NEXT_PUBLIC_MARKETPLACE_ADDRESS=

# Network configuration
NEXT_PUBLIC_CHAIN_ID=80001
NEXT_PUBLIC_NETWORK_NAME=mumbai

# =============================================================================
# OPTIONAL: ADDITIONAL SERVICES
# =============================================================================

# Alchemy API key (alternative to Infura)
ALCHEMY_API_KEY=your_alchemy_api_key

# Analytics and monitoring
NEXT_PUBLIC_ANALYTICS_ID=

# =============================================================================
# INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env.local (for Next.js) and .env (for Hardhat)
# 2. Fill in your actual values
# 3. Never commit .env files to git!
